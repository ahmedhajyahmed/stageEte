{%extends "::Layout.html.twig" %}

{% block title %}Congé Sans Solde{% endblock %}

{% block body %}


    <!--begin::Form-->
    {{ form_start(form, {'attr': {'class': 'm-form m-form--label-align-right'}})}}

        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                                                    <span class="m-portlet__head-icon m--hide">
                                                        <i class="la la-gear"></i>
                                                    </span>
                    <h3 class="m-portlet__head-text">
                    <strong>
                        Congé Sans Solde
                    <strong>
                    </h3>
                </div>
            </div>
        </div>

    
        <p class="text-align:left style"margin: 10px 10px 10px 10px">
            <div class="m-portlet__body">
                <div class="m-form__section m-form__section--first">
                    <div class="m-form__heading">
                        <h3 class="m-form__heading-title">
                            Période de congé :
                        </h3>
                    </div>
                <div class="form-group m-form__group row" id="startDate">
                    {{ form_label(form.startDate, "du", {'label_attr': {'class': 'col-lg-2 col-form-label'}}) }}

                    {{ form_errors(form.startDate) }}

                    <div class="col-lg-6">
                        {{ form_widget(form.startDate, {'attr': {'class': 'form-control m-input'}}) }}
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    {{ form_label(form.endDate, "au", {'label_attr': {'class': 'col-lg-2 col-form-label'}}) }}

                    {{ form_errors(form.endDate) }}

                    <div class="col-lg-6">
                        {{ form_widget(form.endDate, {'attr': {'class': 'form-control m-input'}}) }}
                    </div>
                </div>
            </div>
        </p>

        <p class="text-align:left
            <div class="m-portlet__body">
                <div class="m-form__section m-form__section--first">
                        <div class="m-form__heading" id="nomberOfDays" style="visibility:visible">
                            <h3 class="m-form__heading-title">
                                Nombre de jours demandés :
                            </h3>
                        </div>
                </div>       
					
				<div class="col-lg-5">
					<input type="text" name="diff" id="diff" value="" class="form-control m-input col-lg-2"/>
				</div>
			</div>            
        </p>  
           
        <p class="text-align:left style"margin: 10px 10px 10px 10px ">    
               <div class="m-portlet__body">
                <div class="m-form__section m-form__section--first">
                    <div class="m-form__heading">
                        <h3 class="m-form__heading-title">
                            Justification :
                        </h3>
                    </div>
                        
                <div class="form-group m-form__group row">
                     
                     {{ form_errors(form.supportingDoc) }}

                     <div class="col-lg-6">
                         {{ form_widget(form.supportingDoc, {'attr': {'class': 'form-control m-input'}}) }}
                     </div>
                </div>
            </div>    
												
        </p>

        <p class="text-align:left>
            <div class="m-portlet__body">
                <div class="m-form__section m-form__section--first">
                    <div class="m-form__heading">
                        <h3 class="m-form__heading-title">
                            Motif :
                        </h3>
                    </div>
                        
                <div class="form-group m-form__group row">
                     
                     {{ form_errors(form.pattern) }}

                     <div class="col-lg-6">
                         {{ form_widget(form.pattern, {'attr': {'class': 'form-control m-input'}}) }}
                     </div>
                </div>
            </div> 
            <div >
             <input type="submit" value="envoyé" style="margin-bottom:100px" class="btn btn-brand"/> 
             
        </p>
                     
    {{ form_end(form) }}

    

{% endblock %}