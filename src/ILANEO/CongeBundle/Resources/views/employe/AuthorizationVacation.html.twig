{%extends "::Layout.html.twig" %}

{% block title %}autorisation d'absence{% endblock %}

{% block body %}


   <!--begin::form-->
        {{ form_start(form, {'attr': {'class': 'm-form m-form--label-align-right'}})}}   
								<div class="m-portlet">
									<div class="m-portlet__head">
										<div class="m-portlet__head-caption">
											<div class="m-portlet__head-title">
												<span class="m-portlet__head-icon m--hide">
													<i class="la la-gear"></i>
												</span>
												<h3 class="m-portlet__head-text">
													Authorisation d'absence
												</h3>
											</div>
										</div>
									</div>
									<!--begin::Form-->

									<form class="m-form">
										<div class="m-portlet__body">
											<div class="m-form__section m-form__section--first">
												<div class="form-group m-form__group row">
													<label class="col-lg-3 col-form-label">
														Période de congé:
													</label>
													<div class="form-group m-form__group row" id="startDate">
                                                       
                                                            {{ form_label(form.startDate, "du", {'label_attr': {'class': 'col-lg-1 col-form-label'}}) }}

                                                            {{ form_errors(form.startDate) }}

                                                            <div class="col-lg-9">
                                
                                                                {{ form_widget(form.startDate, {'attr': {'class': 'form-control m-input'}}) }}
                                                            </div>
                                                    </div>    
                                                    <div class="form-group m-form__group row">
                                                            {{ form_label(form.endDate, "au", {'label_attr': {'class': 'col-lg-1 col-form-label'}}) }}

                                                            {{ form_errors(form.endDate) }}

                                                            <div class="col-lg-9">
                                                                {{ form_widget(form.endDate, {'attr': {'class': 'form-control m-input'}}) }}
                                                            </div>
                                                    </div>
											    </div>
												<div class="form-group m-form__group row" id="nomberOfDays" style="visibility:visible">
													<label class="col-lg-3 col-form-label">
														Nombre de jours demandés:
													</label>
													<div class="col-lg-9">
														<input type="text" name="diff" id="diff" value="" />
													</div>
												</div>
												<div class="form-group m-form__group row">
													<label class="col-lg-3 col-form-label">
														justification 
													</label>
													<div class="form-group m-form__group row">
                     
                                                        {{ form_errors(form.supportingDoc) }}

                                                        <div class="col-lg-12">
                                                            {{ form_widget(form.supportingDoc, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                    </div>
												</div>
												<div class="m-form__group form-group row">
													<label class="col-lg-3 col-form-label">
														Motif:
													</label>
													<div class="form-group m-form__group row">
                     
                                                        {{ form_errors(form.pattern) }}

                                                        <div class="col-lg-30">
                                                            {{ form_widget(form.pattern, {'attr': {'class': 'form-control m-input'}}) }}
                                                        </div>
                                                    </div>
												</div>
											</div>
										</div>
                                        <input type="submit" value="submit" style="margin-bottom:100px"/>
										
								    </form>
								    <!--end::Form-->
								</div>

	    {{ form_end(form) }}
    <!--end::form-->
							

    {% block javascripts %}

        <script type="text/javascript" src="{{ asset('assets/app/js/NomberOfAskDays.js')}}"></script>
        <script type="text/javascript" src="{{ asset('assets/app/js/moment.min.js')}}"></script>
    {% endblock %}

{% endblock %}
